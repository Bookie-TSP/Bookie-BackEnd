<p id="notice"><%= notice %></p>

<h1>Listing Chaos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chaos.each do |chao| %>
      <tr>
        <td><%= link_to 'Show', chao %></td>
        <td><%= link_to 'Edit', edit_chao_path(chao) %></td>
        <td><%= link_to 'Destroy', chao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

